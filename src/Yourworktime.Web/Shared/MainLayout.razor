@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="main">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark-blue">
        <div class="container-fluid">
            <a id="logo-main" class="col-lg-4 navbar-brand" href="#">
                <img src="/images/textLogo.svg">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav col-md-2">
                    <NavLink class="navlink-white" href="/#" Match="NavLinkMatch.Prefix">Home</NavLink>
                    <NavLink class="navlink-white" href="/features" Match="NavLinkMatch.Prefix">Features</NavLink>
                    <NavLink class="navlink-white" href="/pricing" Match="NavLinkMatch.Prefix">Pricing</NavLink>
                    <NavLink class="navlink-white" href="/support" Match="NavLinkMatch.Prefix">Support</NavLink>
                </div>
            </div>
            <button class="btn btn-outline-light-blue" href="/signin" type="button">Sign In</button>
            <button class="btn btn-filled-light-blue" href="/signup" type="button">Sign Up</button>
        </div>
    </nav>

    <div class="content px-4">
        @Body
    </div>
</div>


